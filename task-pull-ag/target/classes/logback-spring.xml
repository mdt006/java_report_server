<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<property name="log.project" value="logs/project.log" />
    <property name="log.live" value="logs/live.log" />
    <property name="log.game" value="logs/game.log" />
    <property name="log.yoplay" value="logs/yoplay.log" />
    <property name="log.sport" value="logs/sport.log" />
    <property name="log.hunter" value="logs/hunter.log" />
    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%file:%line] - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.project}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.project}.%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%file:%line] - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="liveFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.live}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.live}.%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%file:%line] - %msg%n</pattern>
        </encoder>
    </appender>
     <appender name="gameFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.game}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.game}.%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%file:%line] - %msg%n</pattern>
        </encoder>
    </appender>
     <appender name="yoplayFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.yoplay}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.yoplay}.%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%file:%line] - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="sportFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.sport}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.sport}.%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%file:%line] - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="hunterFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${log.hunter}</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.hunter}.%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%file:%line] - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="live" level="INFO" additivity="false"> 
        <appender-ref ref="liveFile" /> 
    </logger>
    <logger name="game" level="INFO" additivity="false"> 
        <appender-ref ref="gameFile" /> 
    </logger>
    <logger name="yoplay" level="INFO" additivity="false"> 
        <appender-ref ref="yoplayFile" /> 
    </logger>
    <logger name="sport" level="INFO" additivity="false"> 
        <appender-ref ref="sportFile" /> 
    </logger>
    <logger name="hunter" level="INFO" additivity="false"> 
        <appender-ref ref="hunterFile" /> 
    </logger>
    <root level="info">
        <appender-ref ref="console" />
        <appender-ref ref="file" />
    </root>
</configuration>